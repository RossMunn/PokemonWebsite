.main
  %ul.cards
    - @pokemons.each do |pokemon|
      %li.cards_item
        .card
          - if pokemon.pokemon_type == 'grass' || pokemon.pokemon_type == 'Grass'
            - backtype1 = 'card_image1'
          - elsif pokemon.pokemon_type == 'water' || pokemon.pokemon_type == 'Water'
            - backtype1 = 'card_image3'
          - elsif pokemon.pokemon_type == 'Fire' || pokemon.pokemon_type == 'fire'
            - backtype1 = 'card_image2'
          - else
            - backtype1 = 'card_image5'
          %div{:class => backtype1}
            - pokemon
            - if pokemon.pokemon_image.present?
              = link_to pokemon_path(pokemon) do
                = image_tag pokemon.pokemon_image, class: "card-img-top"
          .card_content
            %h2.card_title= pokemon.name
            %p.card_text= pokemon.description
            %button.btn.card_btn= link_to 'Read More', pokemon_path(pokemon)
